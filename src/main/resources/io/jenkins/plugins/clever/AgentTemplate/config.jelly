<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form" xmlns:i="jelly:fmt">

  <f:entry field="displayName" title="${%Display Name}">
    <f:textbox />
  </f:entry>

  <f:entry field="label" title="${%Label}">
    <f:textbox />
  </f:entry>

  <f:entry field="dockerImage" title="${%Docker image}" >
    <f:textbox default="jenkins/jnlp-slave"/>
  </f:entry>

  <f:entry field="scaler" title="${%Virtual machine size}" >
    <f:select default="XS"/>
  </f:entry>

</j:jelly>